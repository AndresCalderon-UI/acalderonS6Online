<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acalderonS6Online.Views.vActualizarEliminar"
             Title="vActualizarEliminar">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Actualizar/Eliminar"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry x:Name="txtCodigo" 
               IsEnabled="False"/>

        <Entry x:Name="txtNombre"
               Placeholder="Actualice el nombre"/>

        <Entry x:Name="txtApellido"
               Placeholder="Actualice el apellido"/>

        <Entry x:Name="txtEdad"
               Placeholder="Actualice la edad"
               Keyboard="Numeric"/>

        <Button x:Name="btnActualizar"
                Text="Actualizar Estudiante"
                Clicked="btnActualizar_Clicked"/>

        <Button x:Name="btnEliminar"
                Text="Eliminar Estudiante"
                Clicked="btnEliminar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>